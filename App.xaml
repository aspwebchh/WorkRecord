<Application x:Class="DH_ZhouBao.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DH_ZhouBao" Startup="App_Startup">
    <Application.Resources>
        <Style x:Key="ButtonNormal" TargetType="{x:Type Button}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4,8,4"/>
        </Style>
        <Style x:Key="ButtonListViewItem" TargetType="{x:Type Button}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,4,5,4"/>
            <Setter Property="Background" Value="AliceBlue"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style x:Key="SelectNormal" TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="8,5,8,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="TextBoxNormal" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="8,5,8,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        

    </Application.Resources>
</Application>
