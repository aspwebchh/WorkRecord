<Window x:Class="DH_ZhouBao.SetNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DH_ZhouBao"
        mc:Ignorable="d"
        Title="修改大名" Height="200" Width="300">
    <StackPanel>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="请输入大名" HorizontalAlignment="Left" Margin="20,20,5,5" ></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="0"     Margin="20,5,20,5" Name="NameTextBox" Style="{StaticResource TextBoxNormal}"></TextBox>
        <Button  HorizontalAlignment="Left"   Margin="20,5,5,5" Click="Button_Click" Style="{StaticResource ButtonNormal}">
            <TextBlock>保存</TextBlock>
        </Button>
    </StackPanel>
</Window>
